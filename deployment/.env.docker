# Docker Environment Configuration for Obstruction Server
# This file is used by docker-compose.yml

# Application Configuration
PORT=8080

# Gunicorn Worker Configuration
# OPTIMIZED for CPU-bound calculations with 32 cores:
# - 32 workers = 1 per CPU core (best for CPU-intensive work)
# - 2 threads = minimal threading (Python GIL limits thread parallelism)
# - Max concurrent: 64 requests (32Ã—2)
WORKERS=32
THREADS=2

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
DEBUG_REQUESTS=False
GUNICORN_LOG_LEVEL=info

# System Environment
CUDA_VISIBLE_DEVICES=-1
TF_CPP_MIN_LOG_LEVEL=3
OPENCV_IO_ENABLE_OPENEXR=0
OMP_NUM_THREADS=1

# Add any additional environment variables below
