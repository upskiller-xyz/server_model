# Production Environment Configuration - DEBUG MODE
# Use this for troubleshooting production deployments
# Copy to /opt/obstruction-server/.env when debugging is needed

# ============================================
# Server Configuration
# ============================================
PORT=8081

# ============================================
# Flask Configuration (DEBUG MODE)
# ============================================
FLASK_ENV=development
FLASK_DEBUG=True

# ============================================
# Logging Configuration (DEBUG MODE)
# ============================================
# DEBUG level provides maximum verbosity
LOG_LEVEL=DEBUG

# Enable detailed request/response logging
DEBUG_REQUESTS=True

# Log file path
LOG_FILE=/var/log/obstruction-server/app.log

# Enable verbose gunicorn logging
GUNICORN_LOG_LEVEL=debug

# ============================================
# Gunicorn Worker Configuration
# ============================================
# Reduced workers for easier debugging
WORKERS=1
THREADS=4
TIMEOUT=900

# ============================================
# System Environment Variables
# ============================================
CUDA_VISIBLE_DEVICES=-1
TF_CPP_MIN_LOG_LEVEL=2
OPENCV_IO_ENABLE_OPENEXR=0
OMP_NUM_THREADS=1

# ============================================
# Application-Specific Configuration
# ============================================
# Add any custom application settings below

# Enable additional debug output
PYTHONUNBUFFERED=1
WERKZEUG_DEBUG_PIN=off
